<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.ClazzVMMapper">
    <!-- 基础属性查询  id name description grade_id charge_id-->
    <select id="selectAllClazz" resultMap="ClazzVMResult">
        select * from poll_clazz
    </select>
    <!-- 定义结果集 -->
    <resultMap type="com.briup.apps.poll.bean.extend.ClazzVM" id="ClazzVMResult">
        <!-- 基础属性映射 -->
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <!-- 多对一中的关联属性 -->
        <association column="grade_id" property="grade" select="com.briup.apps.poll.dao.GradeMapper.selectByPrimaryKey"/>
        <!--  <association column="charge_id" property="charge" select="com.briup.apps.poll.dao.GradeMapper.selectByPrimaryKey"></association>-->
    </resultMap>
    
</mapper>